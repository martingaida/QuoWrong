extends layout.pug
include utils.pug 

block content
  +navbar()
  div(class='form-container')
    div(class='q-form')
      form(action='/questions/new' method='post')
        input(type='hidden' name='_csrf' value=csrfToken)
        label(for='headline') Question: 
        input(type='text' name='headline' placeholder='What\'s your question?')
        label(for='content') Details: 
        textarea(name='content' placeholder='Optional')
        button(type='submit' class='btn-red') Submit